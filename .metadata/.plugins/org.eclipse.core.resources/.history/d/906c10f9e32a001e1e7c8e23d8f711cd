package org.test;

public class Student {
	
	public static void main(String[] args){
	
		String s = "malayalam";
		
		String reverse = "";
		
		for(int i = s.length()-1; i >= 0; i--){
			char c = s.charAt(i);
			
			reverse = reverse + c;
		}
		System.out.println(reverse);
		
		if(s.equals(reverse)){
			System.out.println("Palindrome "+reverse);
		}
		else{
			System.out.println("Not palindrome: "+reverse);
		}
	}
	
}




